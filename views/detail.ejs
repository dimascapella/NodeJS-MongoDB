<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger">
                    Data Contact Tidak Ada <a class="alert-link" href="/contact">Kembali</a>
                </div>
            <% }else { %>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                    <h5 class="card-title"><%= contact.nama  %> </h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= contact.nohp %> </h6>
                    <p class="card-text"><%= contact.email %> </p>
                    <a class="btn btn-info" href="/contact/edit/<%= contact.nama %>">Ubah</a>
                    <!-- <a class="btn btn-danger" href="/contact/delete/<%= contact.nama %>" onclick="return confirm('yakin?')">Delete</a> -->
                    <form action="/contact?_method=DELETE" method="POST" class="d-inline">
                        <input type="hidden" name="nama" value="<%= contact.nama %>">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <a href="/contact" class="card-link d-block mt-3">Back</a>
                </div>
            </div>
            <% } %> 
        </div>
    </div>
</div>